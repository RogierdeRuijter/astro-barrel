      transition: all 0.3s linear;
      filter: saturate(0.65);
    }

    &:after {
      transform: scaleX(-1) translateY(calc(100% - var(--progress)));
      opacity: 0; 
      --o: 0.6; 
      animation-delay: 0.55s;
    }
  }
